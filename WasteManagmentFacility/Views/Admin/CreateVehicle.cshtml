                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Available" /> @Html.DisplayNameFor(model => model.Available)
                </label>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
